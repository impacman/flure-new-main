---
import "./styles.scss";

import { Arrow1, Arrow2 } from "../../../../svg/Dream/Arrows";
import Descr from "../Descr";
import Images from "../Images";

const { data } = Astro.props;
const { chief, descrs, images } = data;
---

<div class="dream-looking">
  <div class="dream-looking__wrap">
    {
      chief && (
        <div class="dream-looking__chief chief">
          <p class="chief__title" set:html={chief.title} />
          <Arrow1 client:only="react" />
          <div class="chief__card">
            {chief.card.texts.map((el: string) => (
              <p class="chief__card-text" set:html={el} />
            ))}
            <div class="chief__card-bg">
              <svg
                width="444"
                height="554"
                viewBox="0 0 444 554"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <g clip-path="url(#clip0_69_652)">
