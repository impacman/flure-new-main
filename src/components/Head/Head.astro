---
import CMPStyles from "../CMPStyles";

interface Props {
  metadata: {
    title: string;
    descr: string;
    image?: string;
  };
  statusBarColor?: string;
}
const { metadata, statusBarColor } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  {statusBarColor && <meta name="theme-color" content={statusBarColor} />}
  <link rel="sitemap" href="/sitemap.xml" />
  <CMPStyles />

  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/images/favicon/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/images/favicon/favicon-32x32.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href="/images/favicon/favicon-16x16.png"
  />
  <link
    rel="mask-icon"
    href="/images/favicon/safari-pinned-tab.svg"
    color="#f2daf5"
  />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Parisienne&family=Playfair+Display:wght@400;700;800&family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap"
    rel="preload"
    as="style"
    onload="this.onload=null;this.rel='stylesheet'"
  />

  <noscript>
    <link
      href="https://fonts.googleapis.com/css2?family=Parisienne&family=Playfair+Display:wght@400;700;800&family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </noscript>

  <title>{metadata.title}</title>
  <meta name="title" content={metadata.title} />
  <meta name="description" content={metadata.descr} />
  <meta
    name="facebook-domain-verification"
    content="qcha9733lt1q6fjnkfzdsaipgt5jw4"
  />
  <meta name="p:domain_verify" content="d8e50ed460e987d38ad7f2cc6e74b2f1" />
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="http://flure.com/" />
  <meta property="og:title" content={metadata.title} />
  <meta property="og:description" content={metadata.descr} />
  <meta
    property="og:image"
    content={`/images/head/${metadata.image ? metadata.image : "quiz.png"}`}
  />
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="http://flure.com/" />
  <meta property="twitter:title" content={metadata.title} />
  <meta property="twitter:description" content={metadata.descr} />
  <meta
    property="twitter:image"
    content={`/images/head/${metadata.image ? metadata.image : "quiz.png"}`}
  />
  <meta
    name="google-site-verification"
    content="QHfNrKukgqqLwvS9ax3JaixsdIQn1xnBqQx8kvetBZw"
  />
  <!-- Google Tag Manager -->
  <script>
    (function (w, d, s, l, i) {
      w[l] = w[l] || [];
      w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
      var f = d.getElementsByTagName(s)[0],
        j = d.createElement(s),
        dl = l != "dataLayer" ? "&l=" + l : "";
      j.async = true;
      j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
      f.parentNode.insertBefore(j, f);
    })(window, document, "script", "dataLayer", "GTM-TH7Z3KJD");
  </script>
  <!-- End Google Tag Manager -->

  <slot />
</head>
